// Checking Connections- a simple program to check that all the connections are correct

// This is an array that will store a list of Arduino pins connected to LEDS
int ledPin[] = {7,8,9,10};

// This FOR loop will set each pin to be an output pin
void setup()
{
  for (int i=0;i<4;i++)
  {
    pinMode(ledPin[i], OUTPUT);
  }
}

// The main loop uses another FOR loop to turn all the pins on
void loop()
{
  for (int i=0;1<2;i++)
  {
    digitalWrite(ledPin[i],HIGH);
  }
}

// Checking Connections- a simple program to check that all the connections are correct

// This is an array that will store a list of Arduino pins connected to LEDS
int ledPin[] = {7,8,9,10};

// This FOR loop will set each pin to be an output pin
void setup()
{
  for (int i=0;i<4;i++)
  {
    pinMode(ledPin[i], OUTPUT);
  }
}

// The main loop uses another FOR loop to turn all the pins on
void loop()
{
  displayBinary(5);
}

void displayBinary(byte numToShow)
{
  for (int i=0;i<4;i++)
  {
    if (bitRead(numToShow, i)==1)
    {
      digitalWrite(ledPin[i],HIGH);
    }
    else
    {
      digitalWrite(ledPin[i],LOW);
    }
  }
}

// Checking Connections- a simple program to check that all the connections are correct

// This is an array that will store a list of Arduino pins connected to LEDS
int ledPin[] = {7,8,9,10};

// This FOR loop will set each pin to be an output pin
void setup()
{
  for (int i=0;i<4;i++)
  {
    pinMode(ledPin[i], OUTPUT);
  }
}

// The main loop uses another FOR loop to turn all the pins on
void loop() {
  for (byte counter=0; counter<=15; counter++) {
    displayBinary(counter);
    delay(500);
  }
}

void displayBinary(byte numToShow)
{
  for (int i=0;i<4;i++)
  {
    if (bitRead(numToShow, i)==1)
    {
      digitalWrite(ledPin[i],HIGH);
    }
    else
    {
      digitalWrite(ledPin[i],LOW);
    }
  }
}

// Checking Connections- a simple program to check that all the connections are correct

// This is an array that will store a list of Arduino pins connected to LEDS
int ledPin[] = {7,8,9,10};

// This FOR loop will set each pin to be an output pin
void setup()
{
  for (int i=0;i<4;i++)
  {
    pinMode(ledPin[i], OUTPUT);
  }
}

// The main loop uses another FOR loop to turn all the pins on
void loop() {
  // Display a sequence of binary numbers to give the appearance of animated LEDS
  byte nums[] = {0,1,3,6,4,12,8,12,4,6,3,1,0};
  for (byte i=0;i<13;i++) {
    displayBinary(nums[i]);
    delay(25);
  }
}

void displayBinary(byte numToShow)
{
  for (int i=0;i<4;i++)
  {
    if (bitRead(numToShow, i)==1)
    {
      digitalWrite(ledPin[i],HIGH);
    }
    else
    {
      digitalWrite(ledPin[i],LOW);
    }
  }
}
